#include<iostream>
using namespace std;

class Smartphone(){
	
	string Brand;
	string model;
	int display_resolution;
	int RAM;
	int ROM;
	int Storage;
	
	public:
		//setter function
		void setBrand(string& Brand){
			Brand = Brand;
		}
		
		void setmodel(string& model){
			model = model;
		}
		
		void setdisplay_resolution(int display_resolution){
			display_resolution = display_resolution;
		}
		
		void setRAM(int RAM){
			RAM = RAM;
		}
		
		void setROM(int ROM){
			ROM = ROM;
		}
	
		void setStorage(int Storage){
			Storage = Storage;
		}
		
		//getter function
		
		string getBrand(){
			return Brand;
		}
		
		
		string getmodel(){
			return model;
		}
		
		
		int getdisplay_resolution(){
			return display_resolution;
		}
		
		
		int getRAM(){
			return RAM;
		}
		
		
		int getROM(){
			return ROM;
		}
		
		int getStorage(){
			return Storage;
		}
		
		void make_call(int number , string name){
			cout<<"Enter the name of the person : ";
			getline(cin , name);
			cout<<"\nEnter the phone number ";
			cin>>number;
			
			cout<<"\nCalling to :"<<name<<"\n phone number :"<<number;
		}
		
		void send_msg(int number ,string name);
			cout<<"Enter the name of the person : ";
			getline(cin , name);
			cout<<"\nEnter the phone number ";
			cin>>number;
			
			cout<<"\nSending Message to :"<<name<<"\n phone number :"<<number;
			
		void connect_wifi(int fun){
			cout<<"\nConnect to Wifi ? (1 for YES and 0 for NO)";
			cin>>fun;
			if(fun == 1){
				cout<<"\nPhone is Connecting to WIFI";
			}
			else{
				cout<<"\nPhone is NOT Connecting to WIFI";
			}
		}
			
			void internet(string web){
				
				cout<<"\nEnter the name of website : ";
				getline(cin , web);
				
				cout<<web"\n Website is Brwosing ";
		}
	
};



int main(){
	
	Smartphone mob;
	
	cout<<"Enter the Brand	:";
	getline(cin , mob.setBrand);
	
	cout<<"\nEnter the Model	:";
	getline(cin , mob.setmodel);
	
	cout<<"\nEnter the Display Resolution	:";
	cin>>mob.display_resolution;
	
	cout<<"\nEnter the ROM	:";
	cin>>mob.ROM;
	
	cout<<"\nEnter the RAM	:";
	cin>>mob.RAM;
	
	cout<<"\nEnter the Storage	:";
	cin>>mob.Storage;
	
	int number ; 
	string name;
	
	
	
	
	
	
	
	
	
	
	
	return 0;
}
